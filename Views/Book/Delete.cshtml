@model Book

<div class="col-md-8">

    <form asp-action="Delete">

        <input type="hidden" asp-for="BookID" />

        <div>
            <label asp-for="Title" class="label-control"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="Description" class="label-control"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="Author" class="label-control"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="DatePublished" class="label-control"></label>
            <input asp-for="DatePublished" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="Price" class="label-control"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="Genre" class="label-control"></label>
            <input asp-for="Genre" disabled class="form-control" />
        </div>



        <div>
            <input type="submit" value="Delete Book" class="btn btn-danger" />
        </div>

    </form>

</div>